<% if params[:type] == "Have" %>
  $(".have-<%= @item.id %>,.have-<%= @item.asin %>")
    .replaceWith("<%= escape_javascript(render('items/unhave' , item: @item)) %>")
    .removeClass("have")
    .addClass("haved")
    ;
<% else %>
  $(".want-<%= @item.id %>,.want-<%= @item.asin %>")
    .replaceWith("<%= escape_javascript(render('items/unwant' , item: @item)) %>")
    .removeClass("want")
    .addClass("wanted")
    ;
<% end %>

$('.btn-have,.btn-want').removeAttr('disabled');